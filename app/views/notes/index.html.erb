<div class="row">
  <div class="columns large-12 medium-12 small-12">
    <h1 class="page-title">
      Your Notes
      <%= link_to 'Make New Note',
                  new_note_path,
                  :class => 'button'
      %>
    </h1>
  </div>
</div>
<div class="row">
  <% @notes.each do |note| %>
    <div class="columns large-4 medium-4 small-12">
      <div class="card">
        <h3 class="note-title"><%= note.title %></h3>
        <div class="note-excerpt">
          <%= note.text %>
        </div>
        <div class="button-row">
          <%= link_to 'View',
                      note_path(note),
                      :class => 'button columns large-4 medium-12 small-12'
          %>
          <%= link_to 'Edit',
                      edit_note_path(note),
                      :class => 'button columns large-4 medium-12 small-12'
          %>
          <%= link_to 'Delete', note_path(note),
                      method: :delete,
                      data: {
                        confirm: 'Are you sure?'
                      },
                      :class => 'button columns large-4 medium-12 small-12'
          %>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
</div>
