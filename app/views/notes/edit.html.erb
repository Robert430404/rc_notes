<div class="row">
  <div class="columns large-8 medium-10 small-12 large-offset-2 medium-offset-1">
    <div class="panel">
      <div class="panel-heading">
        <h1 class="note-title">Editing Note: <strong class="editable-title" id="editable-title"><%= @note.title %></strong></h1>
      </div>
      <div class="panel-body">
        <%= form_for :note, url: note_path(@note), method: :patch do |f| %>
          <% if @note.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@note.errors.count, "error") %> prohibited
                this note from being saved:
              </h2>
              <ul>
                <% @note.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <p>
            <%= f.label :title %><br>
            <%= f.text_field :title, :id => 'title-field' %>
          </p>
          <p>
            <%= f.label :text %><br>
            <%= f.text_area :text %>
          </p>
          <div class="action-row">
            <%= f.submit :class => 'button columns large-6 medium-6 small-12' %>
            <%= link_to 'Return To Notes', notes_path, :class => 'button columns large-6 medium-6 small-12' %>
          </div>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
